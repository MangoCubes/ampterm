{
  "keybindings": {
    // In visual mode, these keybindings are used
    "Visual": {
	  "<Esc>": { User: { Visual: "ExitDiscard" } },
	  // All 3 can be used to exit visual mode whilst confirming the selection
	  "<v>": { User: { Visual: "ExitSave" } },
	  "<Shift-v>": { User: { Visual: "ExitSave" } },
	  "<Ctrl-v>": { User: { Visual: "ExitSave" } },
    },
	// Insert mode is activated when you are about to insert (or add next/last) more than one items
	// That can happen in the following situations:
	// - When you have selected more than one items
	// - When you are adding a whole playlist
	// - When you are adding more than one playlists
	"Insert": {
	  "<r>": { User: { Insert: "Randomise" } },
	  // "<R>": "RandomiseABit",
	  "<v>": { User: { Insert: "Reverse" } },
	  "<Esc>": { User: { Insert: "CancelAdd" } },

	  // These keybinds essentially work as "just add them"
	  // There are multiple keybinds as we do not know what key you used to enter this mode
	  "<a>": { User: { Insert: "AddAsIs" } },
	  "<i>": { User: { Insert: "AddAsIs" } },
	  "<Shift-i>": { User: { Insert: "AddAsIs" } },
	  "<Shift-a>": { User: { Insert: "AddAsIs" } }
	},
	// This keybinding is exclusive to normal mode.
	"Normal": {
	  // Movement
	  "<Ctrl-w><Left>": { User: { Normal: "WindowLeft" } },
	  "<Ctrl-w><Right>": { User: { Normal: "WindowRight" } },
	  "<Ctrl-w><Up>": { User: { Normal: "WindowUp" } },
	  "<Ctrl-w><Down>": { User: { Normal: "WindowDown" } },

	  // Movement but with hjkl
	  "<Ctrl-w><h>": { User: { Normal: "WindowLeft" } },
	  "<Ctrl-w><l>": { User: { Normal: "WindowRight" } },
	  "<Ctrl-w><k>": { User: { Normal: "WindowUp" } },
	  "<Ctrl-w><j>": { User: { Normal: "WindowDown" } },

	  // Playlist manipulation
	  // Note that both i and Shift+i are mapped to the same key
	  // If the cursor is on a playlist, the program goes into Insert mode
	  "<i>": { User: { Normal: { Add: "Front" } } },
	  "<Shift-i>": { User: { Normal: { Add: "Front" } } },
	  "<a>": { User: { Normal: { Add: "Next" } } },
	  "<Shift-a>": { User: { Normal: { Add: "Last" } } },

	  // Visual mode entry
	  "<v>": { User: { Normal: "SelectMode" } },
	  "<Shift-v>": { User: { Normal: "SelectMode" } },
	  "<Ctrl-v>": { User: { Normal: "DeselectMode" } },
	},
    "Common": {
	  // General movement
	  "<k>": { User: { Common: "Up" } },
	  "<j>": { User: { Common: "Down" } },
	  "<h>": { User: { Common: "Left" } },
	  "<l>": { User: { Common: "Right" } },

	  "<Up>": { User: { Common: "Up" } },
	  "<Down>": { User: { Common: "Down" } },
	  "<Left>": { User: { Common: "Left" } },
	  "<Right>": { User: { Common: "Right" } },

	  "<0>": { ToPlayerWorker: "Previous" },
	  "<Shift-k>": { ToPlayerWorker: "Previous" },
	  // "<^>": "GoToStart"
	  "<$>": { ToPlayerWorker: "Skip" },
	  "<Shift-j>": { ToPlayerWorker: "Skip" },
	  "<c>": { ToPlayerWorker: "Continue" },
	  "<Shift-c>": { ToPlayerWorker: "Pause" },

	  // Advanced Movements
	  "<Shift-g>": { User: { Common: "Bottom" } },
	  "<g><g>": { User: { Common: "Top" } },
	  "<g><r>": { User: { Common: "ResetState" } },
	  "<Shift-r>": { User: { Common: "Refresh" } },
	  "<Enter>": { User: { Common: "Confirm" } },
	  "<q>": { User: { Common: "Cancel" } },
	  "<Esc>":"EndKeySeq",
    },
  },
  // Use legacy authentication that sends the password instead of token and salt
  // This may be necessary if you are using servers like Ampache, which does not support token-based authentication yet
  "use_legacy_auth": false,
  "auth": {
    "url_command": "",
    "username_command": "",
    "password_command": "",
  },
  "unsafe_auth": {
    "url": "",
    "username": "",
    "password": "",
  }
}
