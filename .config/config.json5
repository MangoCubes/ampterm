{
	// These keybinds are available regardless of the focused component.
	"global": {
		"<Ctrl-w><Left>": "WindowLeft",
		"<Ctrl-w><Right>": "WindowRight",
		"<Ctrl-w><Up>": "WindowUp",
		"<Ctrl-w><Down>": "WindowDown",

		"<Ctrl-w><h>": "WindowLeft",
		"<Ctrl-w><l>": "WindowRight",
		"<Ctrl-w><k>": "WindowUp",
		"<Ctrl-w><j>": "WindowDown",

		"<Space>": "PlayOrPause",

		"<Shift-Up>": { "ChangeVolume": 0.05 },
		"<Shift-Down>": { "ChangeVolume": -0.05 },

		"<Shift-Left>": { "ChangePosition": -5.0 },
		"<Shift-Right>": { "ChangePosition": 5.0 },

		"<Ctrl-Up>": { "ChangeSpeed": 0.05 },
		"<Ctrl-Down>": { "ChangeSpeed": -0.05 },
		"<Ctrl-Space>": { "SetSpeed": 1.00 },

		"<0>": "GoToStart",

		"<Shift-k>": "Previous",
		"<$>": "Skip",
		"<Shift-j>": "Skip",

		"<Esc>": "EndKeySeq",
		"<Ctrl-w><q>": "Quit",

		"<t>": "TapToBPM",
		"<Shift-t>": "ToggleTasks",

		"<?>": "ToggleHelp",
	},
	"local": {
		// Keybinds for the help page that appears when you press ? (Or any key that is bound to ToggleHelp)
		"help": {
			"<Up>": "Up",
			"<Down>": "Down",
			"<Left>": "Left",
			"<Right>": "Right",
			"<q>": "Close",
			"<Esc>": "Close",
		},
		// Keybinds for any lists that are in the program
		"list": {
			"<k>": "Up",
			"<j>": "Down",
			// "<h>": "Left",
			// "<l>": "Right",

			"<Up>": "Up",
			"<Down>": "Down",
			// "<Left>": "Left",
			// "<Right>": "Right",

			"<Shift-g>": "Bottom",
			"<g><g>": "Top",

			"<v>": "SelectMode",
			"<Shift-v>": "SelectMode",
			"<Ctrl-v>": "DeselectMode",

			"<g><r>": "ResetSelection",

			"<n>": "SearchNext",
			"<Shift-n>": "SearchPrev",
		},
		// Keybinds for visual mode of the list
		"list_visual": {
			"<k>": "Up",
			"<j>": "Down",
			// "<h>": "Left",
			// "<l>": "Right",

			"<Up>": "Up",
			"<Down>": "Down",
			// "<Left>": "Left",
			// "<Right>": "Right",

			"<Shift-g>": "Bottom",
			"<g><g>": "Top",

			"<Esc>": "ExitDiscard",
			"<v>": "ExitSave",
			"<Shift-v>": "ExitSave",
			"<Ctrl-v>": "ExitSave",

			"<n>": "SearchNext",
			"<Shift-n>": "SearchPrev",
		},
		// Keybinds for the playqueue (rightmost component in the main screen)
		"playqueue": {
			"<Enter>": "PlaySelected",
			"<Shift-f>": "ToggleStar",
			"<d>": "Delete",

			"<z><z>": "FocusPlaying",

			"<r>": "Randomise",
		},
		// Keybinds for the lyrics page (The popup you get you press the key bound to OpenLyrics in nowplaying)
		"lyrics": {
			"<Up>": "Up",
			"<Down>": "Down",

			"<Shift-g>": "Bottom",
			"<g><g>": "Top",
		},
		"playlistlist": {
			"<Enter>": "ViewSelected",

			"<i>": { "Add": "Front" },
			"<Shift-i>": { "Add": "Front" },
			"<a>": { "Add": "Next" },
			"<Shift-a>": { "Add": "Last" },

			"<r><i>": { "RandomAdd": "Front" },
			"<r><Shift-i>": { "RandomAdd": "Front" },
			"<r><a>": { "RandomAdd": "Next" },
			"<r><Shift-a>": { "RandomAdd": "Last" },
		},
		"playlistqueue": {
			"<Shift-r>": "Refresh",
			"<Shift-f>": "ToggleStar",

			"<Enter>": { "Add": "Front" },

			"<i>": { "Add": "Front" },
			"<Shift-i>": { "Add": "Front" },
			"<a>": { "Add": "Next" },
			"<Shift-a>": { "Add": "Last" },

			"<r><i>": { "RandomAdd": "Front" },
			"<r><Shift-i>": { "RandomAdd": "Front" },
			"<r><a>": { "RandomAdd": "Next" },
			"<r><Shift-a>": { "RandomAdd": "Last" },

			"<f>": "Filter",
			"<Ctrl-f>": "ClearFilter",

			"</>": "Search",
			"<Ctrl-l>": "ClearSearch",
		},
	},
    // Use legacy authentication that sends the password instead of token and salt
    // This may be necessary if you are using servers like Ampache, which does not support token-based authentication yet
    "use_legacy_auth": false,
    "auth": {
        "url": "echo URL",
        "username": "echo USERNAME",
        "password": "echo PASSWORD",
    },
    "unsafe_auth": {
        "url": "",
        "username": "",
        "password": "",
    },
}
